# HTTP Server
server {
  listen      80;
  server_name <%= fetch(:domains) %>;
  root        <%= fetch(:deploy_to) %>/current/dist;

  access_log /home/<%= fetch(:user) %>/log/<%= fetch(:application) %>-nginx-access.log;
  error_log  /home/<%= fetch(:user) %>/log/<%= fetch(:application) %>-nginx-error.log;

  error_page 404 /404.html;
  location /404.html { root <%= fetch(:deploy_to) %>/current/dist; }

  error_page 500 /500.html;
  location /500.html { root <%= fetch(:deploy_to) %>/current/dist; }

  client_max_body_size 4G;
  keepalive_timeout 10;

  # To make sure any assets can get through :)
  location ~ /(admin|assets|registration) {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-FORWARDED_PROTO http;
    proxy_redirect off;
    proxy_pass http://api.rhinobird.tv;
  }

}
